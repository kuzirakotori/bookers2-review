<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render "users/user-info",user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render "users/user-form",book: Book.new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr id="book_<%= @book.id %>">
            <td>
              <%= link_to (@book.user) do %>
                <%= image_tag(@book.user.get_profile_image(100,100)) %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title,@book %></td>
            <td><%= @book.body %></td>
            <td class="favorite-btn"><%= render "favorites/btn",book: @book %></td>
            <td class="book-comments-counter"><%= render "book_comments/counter",book: @book %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit",edit_book_path(@book),class:"btn btn-sm btn-success edit_book_14458" %></td>
              <td><%= link_to "Destroy",book_path(@book),method: :delete,class:"btn btn-sm btn-danger destroy_book_14458",data: {confirm: "削除しますか？"} %></td>
            <% end %>  
          </tr>  
        </tbody>
      </table>
      <dvv class="book-comments-index">
        <%= render "book_comments/index",book: @book %>
      </dvv>  
      <%= render "book_comments/form",book: @book,book_comment: @book_comment %>
      </div>
    </div>
  </div>
</div>