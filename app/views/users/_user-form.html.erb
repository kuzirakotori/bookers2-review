<%= form_with model: book,local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %><br>
    <%= f.text_area :body %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Create Book",class:"btn btn-success" %>
  </div>
<% end %>
