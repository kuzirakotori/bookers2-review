<%= form_with model: group do |f| %>
  <div class="form-group">
    <%= f.label "グループ名" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label "紹介文" %><br>
    <%= f.text_area :introduction %>
  </div>
  <div class="form-group">
    <%= f.label "グルーブ画像" %><br>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.submit class:"btn btn-info" %>
  </div>
<% end %>
