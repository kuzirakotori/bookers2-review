<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Group</h1>
      <%= form_with model: @group do |f| %>
        <div class="form-group">
          <%= f.label "グループ名" %><br>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label "紹介文" %><br>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.label "グルーブ画像" %><br>
          <%= f.file_field :image %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Group",class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>  