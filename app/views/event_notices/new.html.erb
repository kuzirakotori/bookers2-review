<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Event Mail</h1>
      <%= form_with url: group_event_notices_path(@group),method: :post do |f| %>
        <div class="form-group">
          <%= f.label "Title" %><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label "Content" %><br>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit class:"btn btn-info" %>
        </div>
      <% end %>    
    </div>
  </div>
</div>  